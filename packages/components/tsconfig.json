{
  "compilerOptions": {
    "paths": {
      "@quri/squiggle-lang": ["../squiggle-lang/src"]
    },
    "module": "es2020",
    "moduleResolution": "node16",
    "jsx": "react",
    "target": "ES6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "composite": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "webpack.config.js"],
  "references": [
    {
      "path": "../squiggle-lang"
    }
  ]
}
